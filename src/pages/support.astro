---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Rubbergoose - Support">
  <main class="container mx-auto p-4">
    <div
      class="prose py-12 max-w-6xl bg-white mx-auto p-8 shadow shadow-slate-300 mt-16"
    >
      <h1 class="text-3xl font-bold text-center mb-8">Support Center</h1>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Contact Us</h2>
        <p class="my-4">
          If you have any questions or need assistance with out apps, please contact us at{" "}
          <a href="mailto:support@rubbergoose.dev" class="text-blue-500 hover:text-blue-700">
            support@rubbergoose.dev
          </a>
        </p>
      </section>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">App Informations</h2>
        <p class="mb-2">Requires iOS 14.0 or later</p>
        <p class="mb-4">Compatible with iPhone and iPad</p>
      </section>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Additional Resources</h2>
        <ul class="list-disc pl-6">
          <li class="mb-2">
            <a href="/privacy" class="text-blue-500 hover:text-blue-700">Privacy Policy</a>
          </li>
          <li class="mb-2">
            <a href="/terms" class="text-blue-500 hover:text-blue-700">Terms of Service</a>
          </li>
        </ul>
      </section>
    </div>
  </main>
</Layout>

